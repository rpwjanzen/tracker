<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Tracker</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://unpkg.com/missing.css@1.1.3">
    @* Put script in header instead of footer so that HTMX does not need to be reloaded when the body is replaced. *@
    <script src="https://unpkg.com/htmx.org@2.0.4"></script>
</head>
<body hx-boost="true">
<div class="sidebar-layout">
    <header>
        <nav>
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" hx-boost="false">Home</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" hx-boost="false">Privacy</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="FinancialTransactions" asp-action="Index" hx-target="#main">Financial Transactions</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Accounts" asp-action="Index" hx-target="#main">Accounts</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Categories" asp-action="Index" hx-target="#main">Categories</a>
                </li>
            </ul>
        </nav>
    </header>
    
    <main id="main">
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 - Tracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>
</div>
@* <script src="~/js/site.js" asp-append-version="true"></script> *@
@* @await RenderSectionAsync("Scripts", required: false) *@
</body>
</html>