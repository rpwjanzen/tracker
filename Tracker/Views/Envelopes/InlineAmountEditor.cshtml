@model Tracker.Domain.EnvelopeType

<input
    is="money-element"
    name="amount"
    value="@Model.Amount.ToString("F")"
    type="number"
    step="0.01"
    min="0.00"
    required="required"
    aria-label="amount"
    hx-swap="outerHTML"
    hx-patch="@Url.Action("Index", "Envelopes", new { id = Model.Id })"
    hx-trigger="blur" />