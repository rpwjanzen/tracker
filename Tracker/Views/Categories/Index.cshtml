@using Tracker.Controllers
@model Tracker.Controllers.CategoryViewModel
@{
    ViewData["Title"] = "Categories";
}

@{
    switch (Model.FragmentId)
    {
        case Fragment.New: 
            <form method="post">
                <div>
                    @Html.AntiForgeryToken()
                </div>
                <div>
                    <label for="name">Name</label>
                    <input
                        id="name"
                        name="name"
                        value="@Model.Category.Name"
                        required
                        autofocus/>
                </div>
                <div>
                    <button type="submit">Add Category</button>
                </div>
                <div>
                    <a href="/categories">Cancel</a>
                </div>
            </form>
        break;
            
        case Fragment.Edit:
            <form method="post">
                <div>@Html.AntiForgeryToken()</div>
                <div>
                    <label for="name">Name</label>
                    <input
                        name="name"
                        value="@Model.Category.Name"
                        required
                        autofocus />
                </div>
                <div>
                    <button type="submit">Save</button>
                </div>
                <div>
                    <a href="/categories">Cancel</a>
                </div>
            </form>
        break;
            
        case Fragment.List:
            <a href="/categories/add">Add Category</a>
            <table class="striped">
                <caption>Categories</caption>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <a href="categories/@category.Id/edit">Edit</a>
                        </td>
                        <td>
                            <a href="/categories/@category.Id/delete">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            <a href="/categories/add">Add Category</a>
            break;
            
        case Fragment.Details: 
            <div>@Model.Category.Id</div>
            <div>@Model.Category.Name</div>
            <div>
                <a href="/categories">Back to list</a>
            </div>
            <div>
                <a href="/categories/@Model.Category.Id/edit">Edit</a>
            </div>
            <div>
                <a href="/categories/@Model.Category.Id/delete">Delete</a>
            </div>
            break;
            
        case Fragment.Delete:
            <form method="post">
                <p>Are you sure you want to delete the category "@Model.Category.Name"?</p>
                <button>Delete</button>
                <a href="/categories">Cancel</a>
            </form>
            break;
    
        default:
            throw new ArgumentOutOfRangeException();
    }
}